extends ./layout/index

block contenido 
  main.container.mt-5 
    h1.text-center.mt-5 #{pagina}
    blockquote.text-center Lee sobre clientes y sus experiencias
    include ./layout/bloqueTestimonios
    .row

      .col-md-12
        h2.d-block.w-100.text-center Agrega un testimonio
        if(errores)
          each error in errores 
            .alert.col.alert-danger.text-center= error.mensaje

      .row.justify-content-center.col
        .col-md-8
          form(action="/testimonios" method="POST") 
            .form-group 
              label(for="nombre") Nombre
              input#nombre(type="text" placeholder="Tu Nombre" name="nombre" value= nombre class="form-control")
            .form-group 
              label(for="email") Correo Electr√≥nico
              input#email(type="text" placeholder="Tu Email" name="email" value= email class="form-control")
            .form-group 
              label(for="mensaje") Mensaje
              textarea#mensaje(name="mensaje", cols="30", rows="10" class="form-control" placeholder="Tu Mensaje")= mensaje

            input.btn.btn-success.btn-block(type="submit")